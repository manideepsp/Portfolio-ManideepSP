---
import BaseLayout from '../../layouts/BaseLayout.astro';
import config from '../../lib/config.js';
import { renderMarkdown } from '../../lib/markdown.js';
import { fetchReadme } from '../../lib/readmeFetcher.js';
import { slugify } from '../../lib/slugify.js';

export async function getStaticPaths() {
  const fallbackMd = '# README not available\n\nThis project does not have a README yet.';
  const parseOwnerRepo = (url = '') => {
    try {
      const parsed = new URL(url);
      const [owner, repo] = parsed.pathname.replace(/^\//, '').split('/');
      if (owner && repo) return `${owner}/${repo}`;
    } catch (e) {
      // ignore parse errors, handled by fallback
    }
    return null;
  };

  const loadReadme = async (project) => {
    // Prefer explicit readmeUrl, then fall back to repoUrl using GitHub raw fetcher
    if (project.readmeUrl) {
      try {
        const res = await fetch(project.readmeUrl);
        if (!res.ok) throw new Error(`Failed to fetch README: ${res.status}`);
        return await res.text();
      } catch (e) {
        return fallbackMd;
      }
    }

    const ownerRepo = parseOwnerRepo(project.repoUrl);
    if (ownerRepo) {
      try {
        return await fetchReadme(ownerRepo);
      } catch (e) {
        return fallbackMd;
      }
    }

    return fallbackMd;
  };

  const projects = config.projects || [];
  const paths = await Promise.all(
    projects.map(async (project) => {
      const slug = project.slug || slugify(project.title || 'project');
      const md = await loadReadme(project);
      const readmeHtml = await renderMarkdown(md, { repoUrl: project.repoUrl });
      return {
        params: { slug },
        props: {
          project: {
            ...project,
            slug,
            readmeHtml,
          },
        },
      };
    })
  );

  return paths;
}

const { project } = Astro.props;
const basePath = Astro.site ? new URL(Astro.site).pathname.replace(/\/$/, '') : '';
const imageSrc = project.image?.startsWith('http') ? project.image : project.image ? `${basePath}${project.image}` : '';
---

<BaseLayout title={`${project.title} | Projects`}>
  <section class="project-detail-page single-page">
    <!-- Back navigation -->
    <a href={`${basePath}/projects`} class="back-link">
      <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <path d="M19 12H5M12 19l-7-7 7-7"/>
      </svg>
      <span>Back to Projects</span>
    </a>

    <div class="project-detail-header">
      <div class="project-detail-title-area">
        <p class="eyebrow">Project</p>
        <h1 class="project-title">{project.title}</h1>
        {project.description && (
          <p class="project-subtitle">{project.description}</p>
        )}
      </div>
    </div>

    {/* Tech stack tags */}
    {project.tags && project.tags.length > 0 && (
      <div class="project-tech-stack">
        {project.tags.map(tag => (
          <span class="tech-tag">{tag}</span>
        ))}
      </div>
    )}

    {/* Action buttons */}
    <div class="project-actions">
      {project.repoUrl && (
        <a class="btn primary" href={project.repoUrl} target="_blank" rel="noopener">
          <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
            <path d="M12 2C6.48 2 2 6.48 2 12c0 4.42 2.87 8.17 6.84 9.49.5.09.66-.22.66-.48v-1.69c-2.78.6-3.37-1.34-3.37-1.34-.45-1.15-1.11-1.46-1.11-1.46-.91-.62.07-.61.07-.61 1 .07 1.53 1.03 1.53 1.03.89 1.52 2.34 1.08 2.91.83.09-.65.35-1.08.63-1.33-2.22-.25-4.56-1.11-4.56-4.94 0-1.09.39-1.98 1.03-2.68-.1-.25-.45-1.27.1-2.65 0 0 .84-.27 2.75 1.02.8-.22 1.65-.33 2.5-.33.85 0 1.7.11 2.5.33 1.91-1.29 2.75-1.02 2.75-1.02.55 1.38.2 2.4.1 2.65.64.7 1.03 1.59 1.03 2.68 0 3.84-2.34 4.68-4.57 4.93.36.31.68.92.68 1.85v2.75c0 .27.16.58.67.48C19.14 20.16 22 16.42 22 12c0-5.52-4.48-10-10-10z"/>
          </svg>
          <span>View on GitHub</span>
        </a>
      )}
      {project.is_demo_available && project.demoUrl && (
        <a class="btn secondary" href={project.demoUrl} target="_blank" rel="noopener">
          <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"/>
            <polyline points="15 3 21 3 21 9"/>
            <line x1="10" y1="14" x2="21" y2="3"/>
          </svg>
          <span>Live Demo</span>
        </a>
      )}
    </div>

    {imageSrc ? (
      <div class="project-detail-image">
        <img src={imageSrc} alt={`${project.title} preview`} loading="lazy" />
      </div>
    ) : null}

    <div class="project-readme" set:html={project.readmeHtml}></div>
  </section>
</BaseLayout>

<style>
.project-detail-page {
  display: flex;
  flex-direction: column;
  gap: 24px;
}

.back-link {
  display: inline-flex;
  align-items: center;
  gap: 8px;
  color: var(--muted);
  text-decoration: none;
  font-size: 0.9rem;
  font-weight: 500;
  padding: 8px 0;
  transition: color 0.2s ease;
}

.back-link:hover {
  color: var(--accent);
}

.back-link svg {
  transition: transform 0.2s ease;
}

.back-link:hover svg {
  transform: translateX(-3px);
}

.project-detail-header {
  display: flex;
  flex-direction: column;
  gap: 8px;
}

.project-detail-title-area {
  max-width: 700px;
}

.project-title {
  margin: 8px 0 0;
  font-size: clamp(1.75rem, 4vw, 2.5rem);
  line-height: 1.2;
}

.project-subtitle {
  color: var(--muted);
  font-size: 1.1rem;
  margin: 12px 0 0;
  line-height: 1.5;
}

.project-tech-stack {
  display: flex;
  gap: 8px;
  flex-wrap: wrap;
  margin-top: 4px;
}

.tech-tag {
  font-size: 0.75rem;
  padding: 6px 12px;
  border-radius: 20px;
  background: rgba(31,182,160,0.1);
  border: 1px solid rgba(31,182,160,0.2);
  color: var(--accent);
  font-weight: 500;
  letter-spacing: 0.02em;
}

.project-actions {
  display: flex;
  gap: 12px;
  flex-wrap: wrap;
}

.project-actions .btn {
  display: inline-flex;
  align-items: center;
  gap: 8px;
  padding: 12px 20px;
  border-radius: 10px;
  font-weight: 600;
  font-size: 0.95rem;
  text-decoration: none;
  transition: all 0.25s cubic-bezier(0.4, 0, 0.2, 1);
}

.project-actions .btn.primary {
  background: linear-gradient(135deg, var(--accent) 0%, #2dd4bf 100%);
  color: #fff;
  box-shadow: 0 4px 14px rgba(31,182,160,0.25);
}

.project-actions .btn.primary:hover {
  transform: translateY(-2px);
  box-shadow: 0 6px 20px rgba(31,182,160,0.35);
}

.project-actions .btn.secondary {
  background: rgba(99,102,241,0.1);
  border: 1px solid rgba(99,102,241,0.25);
  color: #a5b4fc;
}

.project-actions .btn.secondary:hover {
  background: rgba(99,102,241,0.18);
  border-color: #a5b4fc;
  transform: translateY(-2px);
}

.project-detail-image {
  margin: 8px 0;
}

.project-detail-image img {
  width: 100%;
  max-height: 400px;
  object-fit: contain;
  border-radius: 14px;
  border: 1px solid rgba(255,255,255,0.06);
  background: rgba(0,0,0,0.2);
  box-shadow: 0 8px 32px rgba(0,0,0,0.3);
}

.project-readme {
  background: var(--surface);
  border-radius: 16px;
  padding: 28px;
  border: 1px solid rgba(255,255,255,0.04);
  box-shadow: 
    0 8px 32px rgba(0,0,0,0.2),
    inset 0 1px 0 rgba(255,255,255,0.03);
}

/* README content styling */
.project-readme :global(h1),
.project-readme :global(h2),
.project-readme :global(h3) {
  color: var(--text);
  margin-top: 24px;
  margin-bottom: 12px;
}

.project-readme :global(h1:first-child),
.project-readme :global(h2:first-child) {
  margin-top: 0;
}

.project-readme :global(p) {
  color: var(--muted);
  line-height: 1.7;
  margin-bottom: 16px;
}

.project-readme :global(a) {
  color: var(--accent);
  text-decoration: none;
  border-bottom: 1px solid transparent;
  transition: border-color 0.2s;
}

.project-readme :global(a:hover) {
  border-bottom-color: var(--accent);
}

.project-readme :global(code) {
  background: rgba(0,0,0,0.3);
  padding: 2px 6px;
  border-radius: 4px;
  font-size: 0.9em;
  color: #e2e8f0;
}

.project-readme :global(pre) {
  background: rgba(0,0,0,0.4);
  padding: 16px;
  border-radius: 10px;
  overflow-x: auto;
  margin: 16px 0;
  border: 1px solid rgba(255,255,255,0.04);
}

.project-readme :global(pre code) {
  background: none;
  padding: 0;
}

.project-readme :global(ul),
.project-readme :global(ol) {
  color: var(--muted);
  padding-left: 24px;
  margin-bottom: 16px;
}

.project-readme :global(li) {
  margin-bottom: 8px;
  line-height: 1.6;
}

.project-readme :global(img) {
  max-width: 100%;
  height: auto;
  border-radius: 8px;
  margin: 16px 0;
}

.project-readme :global(blockquote) {
  border-left: 3px solid var(--accent);
  padding-left: 16px;
  margin: 16px 0;
  color: var(--muted);
  font-style: italic;
}

.project-readme :global(table) {
  width: 100%;
  border-collapse: collapse;
  margin: 16px 0;
}

.project-readme :global(th),
.project-readme :global(td) {
  padding: 10px 12px;
  border: 1px solid rgba(255,255,255,0.08);
  text-align: left;
}

.project-readme :global(th) {
  background: rgba(0,0,0,0.2);
  font-weight: 600;
}

.eyebrow {
  text-transform: uppercase;
  letter-spacing: 0.12em;
  font-size: 0.75rem;
  color: var(--accent);
  font-weight: 600;
  margin: 0;
}

@media (max-width: 768px) {
  .project-title {
    font-size: 1.5rem;
  }

  .project-subtitle {
    font-size: 1rem;
  }

  .project-actions .btn {
    padding: 10px 16px;
    font-size: 0.9rem;
  }

  .project-detail-image img {
    max-height: 280px;
  }

  .project-readme {
    padding: 20px;
  }
}
</style>

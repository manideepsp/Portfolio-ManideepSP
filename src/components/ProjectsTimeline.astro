---
import config from '../lib/config.json';

interface Project {
  title: string;
  description: string;
  image?: string;
  repoUrl: string;
}

// Use projects from config
const configProjects = config.projects || [];

// Transform projects for the timeline layout
const projects: Project[] = configProjects.map(p => ({
  title: p.title,
  description: p.description || 'No description available',
  image: p.image,
  repoUrl: p.repoUrl
}));

// Alternate layout for visual interest
const projectsWithLayout = projects.map((p, idx) => ({
  ...p,
  isLeft: idx % 2 === 0
}));
---

<div class="projects-timeline">
  {projectsWithLayout.map((project, idx) => (
    <div class={`project-timeline-item ${project.isLeft ? 'left' : 'right'}`} style={`--delay: ${idx * 100}ms`}>
      <div class="project-content">
        <h3 class="text-lg font-semibold">{project.title}</h3>
        <p class="text-sm" style="color: var(--muted);">{project.description}</p>
        <a href={project.repoUrl} target="_blank" rel="noopener" class="project-link text-sm" style="color:var(--accent);font-weight:600;">View on GitHub â†’</a>
      </div>
      <div class="project-dot"></div>
      {project.image && (
        <div class="project-image">
          <img src={project.image} alt={project.title} />
        </div>
      )}
    </div>
  ))}
</div>

<style>
  .projects-timeline {
    position: relative;
    padding: 40px 0;
  }

  .projects-timeline::before {
    content: '';
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    top: 0;
    bottom: 0;
    width: 2px;
    background: linear-gradient(to bottom, var(--accent), transparent);
  }

  .project-timeline-item {
    display: grid;
    grid-template-columns: 1fr 50px 1fr;
    gap: 24px;
    margin-bottom: 60px;
    align-items: center;
    position: relative;
    animation: slideIn 0.6s ease-out forwards;
    animation-delay: var(--delay, 0ms);
    opacity: 0;
  }

  .project-timeline-item.left {
    direction: rtl;
  }

  .project-timeline-item.left > * {
    direction: ltr;
  }

  .project-dot {
    width: 24px;
    height: 24px;
    border-radius: 50%;
    background: var(--bg);
    border: 3px solid var(--accent);
    position: relative;
    z-index: 2;
    transition: all 0.2s ease;
  }

  .project-timeline-item:hover .project-dot {
    width: 32px;
    height: 32px;
    margin: -4px;
    box-shadow: 0 0 0 8px rgba(0, 212, 255, 0.1);
  }

  .project-content {
    padding: 20px 24px;
    border: 1px solid rgba(0, 212, 255, 0.2);
    border-radius: 8px;
    background: rgba(0, 212, 255, 0.02);
    transition: all 0.2s ease;
  }

  .project-timeline-item:hover .project-content {
    border-color: var(--accent);
    background: rgba(0, 212, 255, 0.05);
    box-shadow: 0 8px 24px rgba(0, 212, 255, 0.1);
  }

  .project-year {
    font-size: 12px;
    font-weight: 700;
    color: var(--accent);
    font-family: 'Monaco', 'Menlo', monospace;
    margin-bottom: 8px;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .project-content h3 {
    margin: 0 0 8px;
    font-size: 18px;
    font-weight: 700;
    color: var(--text);
  }

  .project-content p {
    margin: 0 0 12px;
    font-size: 14px;
    color: var(--muted);
    line-height: 1.5;
  }

  .project-link {
    display: inline-block;
    font-size: 13px;
    font-weight: 600;
    color: var(--accent);
    text-decoration: none;
    transition: all 0.2s ease;
  }

  .project-link:hover {
    gap: 4px;
  }

  .project-image {
    border-radius: 8px;
    overflow: hidden;
    background: rgba(255, 255, 255, 0.05);
    aspect-ratio: 16 / 9;
  }

  .project-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    opacity: 0.9;
    transition: opacity 0.2s ease;
  }

  .project-timeline-item:hover .project-image img {
    opacity: 1;
  }

  @media (max-width: 768px) {
    .projects-timeline::before {
      left: 20px;
      transform: translateX(-50%);
    }

    .project-timeline-item {
      grid-template-columns: 60px 1fr;
      gap: 20px;
    }

    .project-timeline-item.left {
      direction: ltr;
    }

    .project-image {
      display: none;
    }

    .project-dot {
      margin-left: 0;
    }
  }

  @keyframes slideIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>

---
import config from '../lib/config.json';
---

<div class="resume-viewer card">
  <div class="controls" style="margin-bottom:12px;">
    <a class="btn primary" href={`/resumes/${config.resume}`} target="_blank" rel="noopener">Download Resume</a>
  </div>
  <iframe src={`/resumes/${config.resume}#toolbar=0`} style="width:100%;height:70vh;border:0;border-radius:12px;" title="Resume viewer"></iframe>
</div>
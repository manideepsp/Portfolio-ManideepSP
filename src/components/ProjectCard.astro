---
interface Props {
  title: string;
  description: string;
  image?: string;
  repoUrl: string;
  demoUrl?: string;
  slug?: string;
  tags?: string[];
}

const { title, description, image, repoUrl, demoUrl, slug, tags } = Astro.props;

// Compute base path from Astro.site so assets work on GitHub Pages subpaths
const basePath = Astro.site ? new URL(Astro.site).pathname.replace(/\/$/, '') : '';
const imageSrc = image && image.startsWith('http') ? image : image ? `${basePath}${image}` : '';
const detailUrl = slug ? `${basePath}/projects/${slug}` : repoUrl;
---


<article class="card project-card project-card-modern" data-sr>
  <div class="project-card-body">
    <div class="project-card-row">
      {image && (
        <div class="project-card-media">
          <img src={imageSrc} alt={title} class="project-card-image" loading="lazy" />
        </div>
      )}
      <div class="project-card-info">
        <h3 class="text-lg font-semibold"><a href={detailUrl}>{title}</a></h3>
        <p class="text-sm" style="color: var(--muted);">{description}</p>
        {tags && tags.length > 0 && (
          <div class="project-card-tags">
            {tags.map(tag => <span class="tech-tag">{tag}</span>)}
          </div>
        )}
      </div>
    </div>
  </div>
  <div class="project-card-links">
    <a class="project-btn" href={detailUrl}>
      <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
        <path d="M13 2L3 14h9l-1 8 10-12h-9l1-8z" fill="currentColor"/>
      </svg>
      <span>Details</span>
    </a>
    <a class="project-btn project-btn-secondary" href={repoUrl} target="_blank" rel="noopener">
      <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
        <path d="M12 2C6.48 2 2 6.48 2 12c0 4.42 2.87 8.17 6.84 9.49.5.09.66-.22.66-.48v-1.69c-2.78.6-3.37-1.34-3.37-1.34-.45-1.15-1.11-1.46-1.11-1.46-.91-.62.07-.61.07-.61 1 .07 1.53 1.03 1.53 1.03.89 1.52 2.34 1.08 2.91.83.09-.65.35-1.08.63-1.33-2.22-.25-4.56-1.11-4.56-4.94 0-1.09.39-1.98 1.03-2.68-.1-.25-.45-1.27.1-2.65 0 0 .84-.27 2.75 1.02.8-.22 1.65-.33 2.5-.33.85 0 1.7.11 2.5.33 1.91-1.29 2.75-1.02 2.75-1.02.55 1.38.2 2.4.1 2.65.64.7 1.03 1.59 1.03 2.68 0 3.84-2.34 4.68-4.57 4.93.36.31.68.92.68 1.85v2.75c0 .27.16.58.67.48C19.14 20.16 22 16.42 22 12c0-5.52-4.48-10-10-10z" fill="currentColor"/>
      </svg>
      <span>Repository</span>
    </a>
  </div>
</article>

<script type="module" client:load>
  // Subtle JS hover animation for project cards
  document.querySelectorAll('.project-card-modern').forEach(card => {
    card.addEventListener('mousemove', e => {
      const rect = card.getBoundingClientRect();
      const x = e.clientX - rect.left;
      const y = e.clientY - rect.top;
      card.style.setProperty('--hover-x', x + 'px');
      card.style.setProperty('--hover-y', y + 'px');
    });
    card.addEventListener('mouseleave', () => {
      card.style.removeProperty('--hover-x');
      card.style.removeProperty('--hover-y');
    });
  });
</script>


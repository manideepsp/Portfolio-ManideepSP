---
interface Props {
  title: string;
  description: string;
  image?: string;
  repoUrl: string;
}

const { title, description, image, repoUrl } = Astro.props;
---

<article class="card project-card" data-sr>
  <div class="project-card-body">
    {image ? (
      <div class="project-card-row">
        <div class="project-card-media">
          <img src={image} alt={title} class="project-card-image" />
        </div>
        <div class="project-card-info">
          <h3 class="text-lg font-semibold"><a href={repoUrl} target="_blank" rel="noopener">{title}</a></h3>
          <p class="text-sm" style="color: var(--muted);">{description}</p>
        </div>
      </div>
    ) : (
      <div>
        <h3 class="text-lg font-semibold"><a href={repoUrl} target="_blank" rel="noopener">{title}</a></h3>
        <p class="text-sm" style="color: var(--muted);">{description}</p>
      </div>
    )}
  </div>
  <a class="project-link" href={repoUrl} target="_blank" rel="noopener">View Project â†’</a>
</article>

<style>
/* Make each project card layout independent and vertically spaced */
.project-card {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 100%;
}

.project-card-body {
  padding: 8px 8px 12px 8px;
}

.project-card-row {
  display: flex;
  gap: 12px;
  align-items: center;
}

.project-card-media {
  flex: 0 0 auto;
}

.project-card-image {
  width: 140px;
  height: 84px;
  border-radius: 8px;
  object-fit: cover;
  display: block;
  box-shadow: 0 6px 18px rgba(2,6,23,0.6);
  border: 1px solid rgba(255,255,255,0.03);
}

.project-card-info {
  flex: 1 1 auto;
}

@media (max-width: 768px) {
  .project-card-row { flex-direction: column; align-items: stretch; }
  .project-card-image { width: 100%; height: 160px; border-radius: 10px; }
}

.project-card h3 { margin: 0 0 8px; }
.project-card h3 a { color: var(--text); text-decoration: none; }
.project-card h3 a:hover { color: var(--accent); }
.project-card p { margin: 0; }

.project-link {
  display: inline-block;
  padding: 10px 12px 10px 20px; /* top right bottom left */
  color: var(--accent);
  font-size: 14px;
  font-weight: 600;
  text-decoration: underline;
  align-self: flex-start; /* keep link aligned left inside the card */
}
</style>
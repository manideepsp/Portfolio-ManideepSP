  position: relative;
  z-index: 1;
}

.project-btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  gap: 6px;
  padding: 10px 16px;
  background: rgba(31,182,160,0.08);
  border: 1px solid rgba(31,182,160,0.2);
  color: var(--accent);
  text-decoration: none;
  font-size: 0.85rem;
  font-weight: 600;
  border-radius: 8px;
  transition: all 0.25s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  z-index: 2;
  flex: 1;
}

.project-btn:hover,
.project-btn:focus {
  background: rgba(31,182,160,0.15);
  border-color: var(--accent);
  transform: translateY(-1px);
  box-shadow: 0 4px 12px rgba(31,182,160,0.2);
}

.project-btn svg {
  width: 14px;
  height: 14px;
  flex-shrink: 0;
}

.project-btn-secondary {
  background: rgba(99,102,241,0.08);
  border-color: rgba(99,102,241,0.2);
  color: #a5b4fc;
}

.project-btn-secondary:hover,
.project-btn-secondary:focus {
  background: rgba(99,102,241,0.15);
  border-color: #a5b4fc;
  box-shadow: 0 4px 12px rgba(99,102,241,0.2);
}

@media (max-width: 768px) {
  .project-card-row {
    flex-direction: column;
    gap: 12px;
  }

  .project-card-image {
    width: 100%;
    height: 140px;
    border-radius: 10px;
  }

  .project-card-body {
    padding: 16px;
  }


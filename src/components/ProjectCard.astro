---
interface Props {
  title: string;
  description: string;
  image?: string;
  repoUrl: string;
  demoUrl?: string;
  slug?: string;
  tags?: string[];
}

const { title, description, image, repoUrl, demoUrl, slug, tags } = Astro.props;

// Compute base path from Astro.site so assets work on GitHub Pages subpaths
const basePath = Astro.site ? new URL(Astro.site).pathname.replace(/\/$/, '') : '';
const imageSrc = image && image.startsWith('http') ? image : image ? `${basePath}${image}` : '';
const detailUrl = slug ? `${basePath}/projects/${slug}` : repoUrl;
---


<article class="card project-card project-card-modern" data-sr>
  <div class="project-card-body">
    <div class="project-card-row">
      {image && (
        <div class="project-card-media">
          <img src={imageSrc} alt={title} class="project-card-image" loading="lazy" />
        </div>
      )}
      <div class="project-card-info">
        <h3 class="text-lg font-semibold"><a href={detailUrl}>{title}</a></h3>
        <p class="text-sm" style="color: var(--muted);">{description}</p>
        {tags && tags.length > 0 && (
          <div class="project-card-tags">
            {tags.map(tag => <span class="tech-tag">{tag}</span>)}
          </div>
        )}
      </div>
    </div>
  </div>
  <div class="project-card-links">
    <a class="project-link" href={detailUrl} target="_blank" rel="noopener">Details</a>
    <a class="project-link" href={repoUrl} target="_blank" rel="noopener">Repo</a>
    {demoUrl && <a class="project-link" href={demoUrl} target="_blank" rel="noopener">Demo</a>}
  </div>
</article>

<script type="module" client:load>
  // Subtle JS hover animation for project cards
  document.querySelectorAll('.project-card-modern').forEach(card => {
    card.addEventListener('mousemove', e => {
      const rect = card.getBoundingClientRect();
      const x = e.clientX - rect.left;
      const y = e.clientY - rect.top;
      card.style.setProperty('--hover-x', x + 'px');
      card.style.setProperty('--hover-y', y + 'px');
    });
    card.addEventListener('mouseleave', () => {
      card.style.removeProperty('--hover-x');
      card.style.removeProperty('--hover-y');
    });
  });
</script>

<style>
/* Make each project card layout independent and vertically spaced */

.project-card-modern {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 100%;
  position: relative;
  overflow: hidden;
  transition: box-shadow 0.22s, border-color 0.22s, transform 0.18s;
  cursor: pointer;
  background: linear-gradient(120deg, rgba(45,212,191,0.06) 0%, rgba(99,102,241,0.04) 100%);
}

.project-card-modern::before {
  content: '';
  position: absolute;
  left: var(--hover-x, 50%);
  top: var(--hover-y, 50%);
  width: 0;
  height: 0;
  pointer-events: none;
  background: radial-gradient(circle 120px at center, rgba(45,212,191,0.13) 0%, transparent 100%);
  opacity: 0.7;
  transform: translate(-50%, -50%);
  transition: left 0.18s, top 0.18s;
  z-index: 0;
}

.project-card-modern:hover, .project-card-modern:focus-within {
  box-shadow: 0 8px 32px rgba(45,212,191,0.13), 0 2px 12px rgba(99,102,241,0.10);
  border-color: var(--accent);
  transform: translateY(-2px) scale(1.012);
}

.project-card-body {
  padding: 12px 12px 16px 12px;
}

.project-card-row {
  display: flex;
  gap: 18px;
  align-items: flex-start;
}

.project-card-media {
  flex: 0 0 auto;
}

.project-card-image {
  width: 120px;
  height: 80px;
  border-radius: 10px;
  object-fit: contain;
  display: block;
  box-shadow: 0 6px 18px rgba(2,6,23,0.5);
  border: 1px solid rgba(255,255,255,0.04);
  background-color: rgba(255,255,255,0.03);
}

.project-card-info {
  flex: 1 1 auto;
}

.project-card-tags {
  margin-top: 8px;
  display: flex;
  gap: 8px;
  flex-wrap: wrap;
}

.project-card-links {
  display: flex;
  gap: 16px;
  padding: 0 0 12px 16px;
  margin-top: 2px;
}

.project-link {
  color: var(--accent);
  font-weight: 500;
  text-decoration: none;
  font-size: 14px;
  transition: color 0.18s;
  position: relative;
  z-index: 2;
}
.project-link:hover, .project-link:focus {
  color: var(--accent-2);
  text-decoration: underline;
}

.project-card-body {
  padding: 8px 8px 12px 8px;
}

.project-card-row {
  display: flex;
  gap: 12px;
  align-items: center;
}

.project-card-media {
  flex: 0 0 auto;
}

.project-card-image {
  width: 140px;
  height: 84px;
  border-radius: 8px;
  object-fit: contain;
  display: block;
  box-shadow: 0 6px 18px rgba(2,6,23,0.6);
  border: 1px solid rgba(255,255,255,0.03);
  background-color: rgba(255,255,255,0.02);
}

.project-card-info {
  flex: 1 1 auto;
}

@media (max-width: 768px) {
  .project-card-row { flex-direction: column; align-items: stretch; }
  .project-card-image { width: 100%; height: 160px; border-radius: 10px; }
}

.project-card h3 { margin: 0 0 8px; }
.project-card h3 a { color: var(--text); text-decoration: none; }
.project-card h3 a:hover { color: var(--accent); }
.project-card p { margin: 0; }

.project-link {
  display: inline-block;
  padding: 10px 12px 10px 20px; /* top right bottom left */
  color: var(--accent);
  font-size: 14px;
  font-weight: 600;
  text-decoration: underline;
  align-self: flex-start; /* keep link aligned left inside the card */
}
</style>
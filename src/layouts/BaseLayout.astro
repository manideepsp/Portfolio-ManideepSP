---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import CursorLight from '../components/CursorLight.astro';
const { title } = Astro.props;
const siteHost = (typeof Astro.site === 'string') ? (Astro.site.split('://')[1] ?? Astro.site) : '';
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title ? `${title} â€¢ ${siteHost}` : (siteHost || '')}</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/src/styles/global.css">
  </head>
  <body>
    <div class="bg-spotlight">
      <CursorLight />
    </div>
    <div class="page-wrap">
      <Header />
      <main class="container">
        <slot />
      </main>
      <Footer />
    </div>
    <script type="module" client:load>
      // Dynamically import the ScrollReveal wrapper and initialize reveals on data-sr elements.
      import('/src/lib/sr.js').then(({ sr, srConfig }) => {
        const els = document.querySelectorAll('[data-sr]');
        els.forEach((el, i) => {
          sr.reveal(el, srConfig(i * 60));
        });
      }).catch(() => {
        // If the module can't be loaded, silently ignore to avoid breaking the page
      });
    </script>
  </body>
</html>
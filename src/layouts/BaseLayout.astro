---
import Header from '../components/Header.astro';
import EnvBanner from '../components/EnvBanner.astro';
import Footer from '../components/Footer.astro';
import CursorLight from '../components/CursorLight.astro';
import config from '../lib/config.js';
import '../styles/global.css';
const { title } = Astro.props;
const siteName = config.hero.name || 'Portfolio';
// Compute a base path for assets (e.g. "/Portfolio-ManideepSP/") from the configured site.
const basePath = Astro.site ? new URL(Astro.site).pathname.replace(/\/$/, '') : '/Portfolio-ManideepSP';
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={`${siteName} – Portfolio. ${config.hero.tagline || ''}`} />
    <title>{title ? `${title} • ${siteName}` : siteName}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;500;600;700&family=Inter:wght@300;400;500;600;700&display=swap"
      media="print" onload="this.media='all'"
    />
    <noscript><link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;500;600;700&family=Inter:wght@300;400;500;600;700&display=swap" /></noscript>
  </head>
  <body>
    <div class="bg-spotlight">
      <CursorLight />
    </div>
    <div class="page-wrap">
      <EnvBanner />
      <Header />
      <main id="main-content" class="container" tabindex="-1">
        <slot />
      </main>
      <Footer />
    </div>
    <script type="module" src={`${basePath}/lib/sr.js`} defer></script>
  </body>
</html>